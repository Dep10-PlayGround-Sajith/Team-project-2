<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane fx:id="root" prefHeight="400.0" prefWidth="412.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.dep10.app.controller.ManageStudentSceneController">
   <children>
      <Button fx:id="btnNewStuden" layoutX="14.0" layoutY="35.0" mnemonicParsing="false" onAction="#btnNewStudentOnAction" text="+New Student" />
      <Label layoutX="139.0" layoutY="14.0" text="Manage Student">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
      <VBox layoutX="-5.0" layoutY="67.0" prefHeight="134.0" prefWidth="412.0" spacing="20.0">
         <children>
            <HBox>
               <children>
                  <Label alignment="CENTER_RIGHT" minWidth="70.0" prefWidth="70.0" text="ID" />
                  <TextField fx:id="txtId" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label alignment="CENTER_RIGHT" minWidth="70.0" prefWidth="70.0" text="NAME" />
                  <TextField fx:id="txtName" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label alignment="CENTER_RIGHT" minWidth="70.0" prefWidth="70.0" text="ADDRESS" />
                  <TextField fx:id="txtAddress" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label alignment="CENTER_RIGHT" minWidth="70.0" prefWidth="70.0" text="ADDRESS" />
                  <Button fx:id="btnSave" mnemonicParsing="false" onAction="#btnSaveOnAction" text="Save" />
                  <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#btnDeleteOnAction" text="Delete" />
               </children>
            </HBox>
         </children>
      </VBox>
      <TableView fx:id="tblStudent" layoutX="2.0" layoutY="227.0" prefHeight="165.0" prefWidth="412.0">
        <columns>
          <TableColumn prefWidth="75.0" text="ID" />
          <TableColumn prefWidth="75.0" text="NAME" />
            <TableColumn prefWidth="75.0" text="ADDRESS" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</AnchorPane>
